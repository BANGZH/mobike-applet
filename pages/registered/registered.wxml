<!--pages/registered/registered.wxml-->
<view class='loginbox'>
  <image class="headimage" src='/resources/bike.png'></image>

  <form bindsubmit='goregistered'>
    <view>
      <input class='userphone' placeholder='请输入输入手机号码' placeholder-class='placeholderstyle' name="userphone"         bindinput='inputphone'></input>
      <input class='userphone' placeholder='身份证' placeholder-class='placeholderstyle' name="pid"></input>
      <view class='codebox'>
        <input class='vercode' placeholder='输入验证码' placeholder-class='placeholderstyle' name="vercode"></input>
        <button class='verbtn' bindtap='getcode'>获取验证码</button>
      </view>
    </view>
    <button form-type='submit' class='btn'>确认注册</button>
  </form>
  <button bindtap='tologin'>
    返回登陆
  </button>
</view>