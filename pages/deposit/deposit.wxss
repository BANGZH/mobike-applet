.header{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 150rpx;
}
.header image{
  width: 150rpx;
  height: 150rpx;
}

.header .textdeposit{
  margin-top: 20rpx;
  margin-bottom: 15rpx;
  font-size: 30rpx;
  color: navy;
}

.header .depositstatus{
  font-size: 70rpx;
}

.mainbox{
  
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;

}
.mainbox input{
 width: 550rpx; 
 height: 80rpx;
 border: 1px solid #00467f;
 border-radius: 5px;
 margin-bottom: 30rpx;
}
.mainbox .pc{
  font-size: 17px;
}
.mainbox button{
   width: 550rpx;
  color: white;
  background: linear-gradient(to right, #00467f, #a5cc82);
}